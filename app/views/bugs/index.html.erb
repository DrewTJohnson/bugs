<p id="notice"><%= notice %></p>

<h1>List of Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th>Reported</th>
      <th colspan="3"></th>
      <th>Priority</th>
      <th>State</th>

    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.author %></td>
        <td><%= bug.body %></td>
        <td><%= bug.created_at %></td>
        <td><%= link_to 'Show', bug %></td>
        <td><%= bug.state %></td>
        <td><%= bug.priority %></td>
        <td><%= link_to 'Show', bug %></td>
        <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
        <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

